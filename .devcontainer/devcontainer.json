{
	"name": "Python",

	"build": {
		"dockerfile": "./Dockerfile"
	},
	"runArgs": [
		"-it", "--rm",
		"--name", "python-container",
		"-p", "127.0.0.1:5000:5000"
	],

	"workspaceFolder": "/app",
	"workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=delegated",
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot",
				"mhutchie.git-graph",
				"ms-python.python",
				"humao.rest-client"
			]
		}
	}
}
